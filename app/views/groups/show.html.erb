<div id="pagemenu">
  <%= link_to '<', groups_path, :class => "newtopic" %>
</div>

<h2><%= @group.title %></h2>
<p><%= @group.thumbnail %></p>

<%= link_to 'Edit', edit_group_path(@group), :class => "buttons" %> |

<h3>Comments</h3><hr>
<%= render @group.comments %>

<% if current_user %>
  <h4>New comment</h4>
  <%= form_for [@group, @group.comments.build] do |f| %>
    <div class="field" style="display: none;">
      <%= f.label :body %><br>
      <%= f.text_area :user_id, value: current_user.id %>
    </div>
    <div class="field">
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>
